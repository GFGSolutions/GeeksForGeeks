// User Template For C++

class Solution {
  public:
    int minJumps(vector<int>& arr) {
        int n = arr.size();
        if (n <= 1) return 0;        
        if (arr[0] == 0) return -1;  
        int far = 0, jump = 0, end = 0;
        for (int i = 0; i < n - 1; i++) {
            far = max(far, i + arr[i]);
            if (i == end) {    
                jump++;
                end = far;
                if (end >= n - 1) return jump;
            }
        }
        return -1; 
    }
};
