// User Template For C++

class Solution {
  public:
    int minSoldiers(vector<int>& arr, int k) {
        int n=arr.size();
        vector<int> needed;
        for(int i=0;i<n;i++){
            int md=arr[i]%k;
            if(md==0) needed.push_back(0);
            else needed.push_back(k-md);
        }
        sort(needed.begin(),needed.end());
        int ans=0;
        for(int i=0;i<(n+1)/2;i++){
            ans+=needed[i];
        }
        return ans;
    }
};
