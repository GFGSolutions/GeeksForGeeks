// User Template For C++

class Solution {
  public:
  int count(vector<int>& nums, int k){
        int ans = 0;
        int odd = 0;
        int i = 0;
        for(int j = 0;j<nums.size();j++){
            if(nums[j]%2!=0) odd++;
            while(odd>k){
                if(nums[i]%2!=0) odd--;
                i++;
            }
            ans += (j -i+1);
        }
        return ans;}
    int countSubarrays(vector<int>& arr, int k) {
        return count(arr,k) - count(arr,k-1);
    }
};
