// User Template For C++

class Solution {
public:
    string reverseWords(string str) {
        vector<string> words;
        stringstream ss(str);
        string word;
        while (getline(ss, word, '.')) {
            words.push_back(word);
        }
        string reversed;
        for (int i = words.size() - 1; i >= 0; i--) {
            reversed += words[i];
            if (i != 0) {
                reversed += ".";
            }
        }
        return reversed;
    }
};
