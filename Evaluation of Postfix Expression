// User Template For C++

class Solution {
  public:
    int evaluatePostfix(string S){
        stack<int> st;
        for(int i=0; i<S.size(); i++){
            if(S[i]=='*' ||S[i]=='/' ||S[i]=='+' ||S[i]=='-'){
                int a=st.top();
                st.pop();
                int b=st.top();
                st.pop();
                int ans ;
                if(S[i]=='+') ans=b+a ;
                else if(S[i]=='-') ans = b-a ;
                else if(S[i]=='*') ans = b*a;
                else ans=b/a ;
                st.push(ans);
            }
            else{
                st.push(S[i]-'0');
            }
        }
        return st.top();
    }
};
