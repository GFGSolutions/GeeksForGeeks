// User Template For C++

class Solution {
  public:
    int minCost(vector<int>& arr) {
        priority_queue<int,vector<int>,greater<int>> pq;
        for(int &a:arr) {
            pq.push(a);
        }
        int cost = 0;
        while(pq.size() > 1) {
            int f = pq.top();
            pq.pop();
            int s = pq.top();
            pq.pop();
            cost += (f+s);
            pq.push(f+s);
        }
        return cost;
    }
};
