// User Template For C++

class Solution {
  public:
    int minCost(vector<int>& heights) {
        int n=heights.size();
        vector<int> dp(n, 1e9);
        dp[n-1]=0;
        for(int i=n-2;i>=0;i--){
            dp[i]=min(dp[i], abs(heights[i+1]-heights[i])+dp[i+1]);
            if(i+2<n) dp[i]=min(dp[i], abs(heights[i+2]-heights[i])+dp[i+2]);
        }
        return dp[0];
    }
};
