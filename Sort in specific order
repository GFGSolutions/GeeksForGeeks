// User Template For C++

class Solution {
  public:
    static bool cmp(int &a, int &b){
        if(a%2!=0 and b%2!=0){
            return a>b;
        }
        if(a%2!=0 and b%2==0){
            return true;
        }
        if(a%2==0 and b%2!=0){
            return false;
        }
        return a<b;
    }
    void sortIt(vector<int>& arr) {
        sort(arr.begin(), arr.end(), cmp);
    }
};
