// User Template For C++

class Solution {
  public:
   int countPali(int i,int j,string&s){
       int count=0;
       while(i>=0&&j<s.size()&&s[i]==s[j]){
           count++,i--,j++;
       }
       return count;
   }
    int countPS(string &s) {
        int n=s.size();
        int result=0;
        for(int i=0;i<n;i++){
            result+=countPali(i,i+1,s);
            result+=countPali(i,i,s);
        }
        return result-n;
    }
};
